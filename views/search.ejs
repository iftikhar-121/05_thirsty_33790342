<!doctype html>
<html>
  <head>
    <title><%=shopName%></title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="panel">
      <h1>Search bar for <%=shopName%></h1>
      <p>Find your favourite drinks</p>
      <form action="/search_result" method="GET" class="form-grid">
        <div class="row">
          <label for="search_box">Name:</label>
          <input id="search_box" type="text" name="search_text">
        </div>
        <div class="row">
          <label for="category">Category:</label>
          <input id="category" type="text" name="category">
        </div>
        <div class="form-actions">
          <input type="submit" value="OK" >
        </div>
      </form>
    </div>
  </body>
</html>
