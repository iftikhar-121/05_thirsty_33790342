<!doctype html> 
<html>  
  <head>  
    <title><%=shopName%></title>
    <link rel="stylesheet" href="/styles.css"> 
  </head>  
  <body>  
    <div class="panel">
      <h1> This is the register page for Drinks4U </h1> 
      <p> Please enter your details to register </p>
      <form method="POST" action="/registered" class="form-grid"> 
        <div class="row">
          <label for="first">First Name:</label>
          <input id="first" type="text" name="first" placeholder="first name" required/> 
        </div>
        <div class="row">
          <label for="last">Last Name:</label>
          <input id="last" type="text" name="last" placeholder="last name" required/> 
        </div>
        <div class="row">
          <label for="email">Email:</label>
          <input id="email" type="email" name="email" placeholder="email" required/>
        </div>
        <div class="form-actions">
          <input type="submit" value="OK" /> 
        </div>
      </form> 
    </div>
</body>  
</html>